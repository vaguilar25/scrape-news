<table class="table table-striped  w-50" id="results" align="center">
    <thead>
        <tr>

            <th id="title">Title</th>
            <th id="link">summary</th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>

        {{#each news}}
        <tr>
            <td>{{title}}</td>
            <td>{{summary}}</td>

        {{!-- If saved news  --}}
            {{#if saved}}

            {{!-- If saved news have notes --}}
            {{#if notes}}
            <td colspan=2>
                <button type="button" data-id={{_id}} data-noteid={{notes._id }} class="btn btn-primary btn-xs remove">
                    Remove</button>

            </td>
            {{else}}
            <td>
                <button type="button" data-id={{_id}} class="btn btn-primary remove btn-xs "> Remove</button>
            </td>
            <td colspan=2><button type="button" data-id={{_id}} data-newstitle="{{{title}}}" class="btn btn-primary btn-xs addNote">
                    Add Note</button></td>
            {{/if}}
            {{else}}


            <td><button type="button" data-id={{_id}} class="btn btn-primary save btn-xs"> Save</button></td>
            <td></td>
            {{/if}}
        </tr>
         {{!-- If saved news have notes display the note--}}
        {{#if notes._id }}

        <tr>
            <td colspan=4>
                <div class="card">
                    <div class="card-header">
                        My Note - {{notes.title}}
                    </div>
                    <div class="card-body">

                        <p class="card-text">{{notes.body}}</p>
                        <button type="button" data-id={{_id}} data-note={{notes._id}} data-newstitle="{{{title}}}"
                            class="btn btn-primary addNote btn-xs">
                            Edit Note</button>
                    </div>
                </div>

            </td>

        </tr>


        {{/if}}
         {{!--  create a modal to display the note --}}
        {{> notes/notes}}
        {{/each}}
    </tbody>
</table>